<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00897b"
    android:orientation="vertical">

    <EditText
        android:id="@+id/player1name"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:hint="Player 1 : X"
        android:fontFamily="@font/delius_swash_caps"
        android:textColor="@android:color/white"
        android:textColorHint="#9e9e9e"
        android:inputType="text"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/player2name"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:fontFamily="@font/delius_swash_caps"
        android:textColor="@android:color/white"
        android:textColorHint="#9e9e9e"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:hint="Player 2 : O"
        android:inputType="text"
        android:textSize="25sp" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/delius_swash_caps"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:background="#512da8"
        android:padding="5dp"
        android:onClick="start_game"
        android:textSize="20sp"
        android:text="Let's GO !" />

    <LinearLayout
        android:id="@+id/name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/player1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/macondo_swash_caps"
            android:textAlignment="center"
            android:textColor="#0d47a1"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/player2"
            android:layout_width="0dp"
            android:textColor="@android:color/holo_red_light"
            android:fontFamily="@font/macondo_swash_caps"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="26sp"/>

    </LinearLayout>

    <com.example.android.tictactoe.player_game
        android:id="@+id/player_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>